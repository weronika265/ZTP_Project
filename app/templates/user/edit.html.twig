{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.user_edit'|trans({'%id%': user.id|default('')}) }}
{% endblock %}

{% block body %}
    <h1>{{ 'title.user_edit'|trans({'%id%': user.id|default('')}) }}</h1>
    <div style="padding-bottom: 60px;">
        {{ form_start(form, { method: 'PUT', action: url('user_edit', {id: user.id}) }) }}
        {{ form_widget(form) }}
        <div class="form-group row float-sm-right">
            <input type="submit" value="{{ 'action.save_info'|trans }}" class="btn btn-primary" />
        </div>
        {{ form_end(form) }}
    </div>
    <div>
        {{ form_start(formPass, { method: 'PUT', action: url('user_edit', {id: user.id}) }) }}
        {{ form_widget(formPass) }}
        <div class="form-group row float-sm-right">
            <input type="submit" value="{{ 'action.save_password'|trans }}" class="btn btn-primary" />
        </div>
        {{ form_end(formPass) }}
    </div>

    {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ url('user_index') }}" title="{{ 'action.back_to_list'|trans }}">
            {{ 'action.back_to_list'|trans }}
        </a>
    {% endif %}
{% endblock %}
